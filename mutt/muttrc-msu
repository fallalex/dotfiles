source ~/.mutt/muttrc

# Paths ----------------------------------------------
set folder           = ~/.mail/msu
set alias_file       = ~/.mutt/accounts/msu/alias         # where to store aliases
set header_cache     = ~/.mutt/accounts/msu/cache/headers # where to store headers
set message_cachedir = ~/.mutt/accounts/msu/cache/bodies  # where to store bodies
set certificate_file = ~/.mutt/accounts/msu/certificates  # where to store certs
set signature        = ~/.mutt/accounts/msu/sig           # my signature file

# Account Settings -----------------------------------
# Default inbox.
set spoolfile = "+INBOX"

# Mailboxes to show in the sidebar.
mailboxes +INBOX

# Other special folders.
#set mbox      = "+gmail/archive"
#set postponed = "+gmail/drafts"

# messages sent will be added to the sent folder by google
#unset record
#unset copy

macro index O "<shell-escape>offlineimap -qa msu<enter>" "run offlineimap for account"

macro index,pager gi "<change-folder>+INBOX<enter>" "Go to inbox"
#macro index,pager ga "<change-folder>+msu/archive<enter>" "Go to all mail"
#macro index,pager gd "<change-folder>+msu/drafts<enter>" "Go to drafts"
#macro index,pager gs "<change-folder>+msu/sent<enter>" "Go to sent"
#macro index,pager gt "<change-folder>+msu/trash<enter>" "Go to trash"
