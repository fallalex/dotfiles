source ~/.mutt/muttrc

# Paths ----------------------------------------------
set folder           = ~/.mail/fallalex
set alias_file       = ~/.mutt/accounts/fallalex/alias         # where to store aliases
set header_cache     = ~/.mutt/accounts/fallalex/cache/headers # where to store headers
set message_cachedir = ~/.mutt/accounts/fallalex/cache/bodies  # where to store bodies
set certificate_file = ~/.mutt/accounts/fallalex/certificates  # where to store certs
set signature        = ~/.mutt/accounts/fallalex/sig           # my signature file

# Account Settings -----------------------------------
# Default inbox.
set spoolfile = "+INBOX"
set mbox      = "+INBOX"
set postponed = "+Drafts"
set trash     = "+Trash"

# Mailboxes to show in the sidebar.
mailboxes +INBOX\
          +Drafts \
          +Sent \
          +Trash \
          +Spam

# Other special folders.
#set mbox      = "+gmail/archive"
#set postponed = "+gmail/drafts"

# messages sent will be added to the sent folder by google
#unset record
#unset copy

macro index O "<shell-escape>offlineimap -qa fallalex<enter>" "run offlineimap for account"
