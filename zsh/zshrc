# get the directory of this script when symlinked works on linux and mac
zshrc_dir=$(dirname "$(realpath $ZDOTDIR/.zshrc)")

zshrc_files=(
    path
    editor-pager
    plugins
    prompt
    history-ignore
    history
    commands
    fzf
    misc
    tmux
)
zshrc_paths=($zshrc_dir'/'${^zshrc_files}'.zsh')
unset zshrc_files

# source files for error if does not exist
for f in $zshrc_paths; do
    if [[ -r $f ]]; then
        . $f
    else
        echo "'$f' does not exist."
    fi
done
unset zshrc_paths

if [[ -r ~/.zshrc.local ]]; then
    . ~/.zshrc.local
fi


# [ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
