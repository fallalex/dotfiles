[user]
	name = Alex Fall
	email = alex@labfall.com
[core]
[alias]
	lg = log --graph --pretty=format:'%Cred%h%C(yellow)%d %Cgreen%cr %Cblue%an%Creset %s' --date=relative --all
    last = log --format=medium --date=iso -3 HEAD
	st = status -sb --ahead-behind --renames
    di = diff --minimal -U0 -p --no-prefix --color-words
    clear = !git checkout master && git reset --hard origin/master && git clean -fdi
    a = add
    aa = add -A
    up = push -u origin HEAD
    p = push
    ll = pull
    c = commit -a
    ca = !git add -A && git commit
    wip = commit -am "WIP"
    wipa = !git add -A && git commit -m "WIP"
    b = branch
    bd = branch -D
    co = checkout
    cob = checkout -b
[push]
	default = simple
[merge]
	tool = kdiff3
[mergetool "kdiff3"]
	cmd = /Library/Developer/CommandLineTools/usr/libexec/git-core/mergetools/kdiff3 $BASE $LOCAL $REMOTE -o $MERGED
